{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block monTitre %}Terminez votre inscription{% endblock %}

{% block body %}
<div container style="padding: 0% 70% 0% 2%">
{{ form_start(form) }}
    {{form_row(form.username,{
        "attr" : {
            "placeholder":"Saisissez votre nom d'utilisateur"
        },
        "label" : "Nom d'utilisateur"
    })}}

    {{form_row(form.password,{
        "attr" : {
            "placeholder":"Saisissez votre mot de passe"
        },
        "label" : "Mot de passe"
    })}}

    {{form_row(form.verifPassword,{
        "attr" : {
            "placeholder":"Saisissez à nouveau votre mot de passe"
        },
        "label" : "Retapez votre mot de passe"
    })}}

    {{form_row(form.imageFile,{
        "attr" : {
            "placeholder":"Choisissez votre photo de profil"
        },
        "label" : "Photo de profil"
    })}}

    {{form_row(form.age,{
        "attr" : {
            "placeholder":"Saisissez votre âge"
        },
        "label" : "Âge"
    })}}

    {{form_row(form.lieuResidence,{
        "attr" : {
            "placeholder":"Saisissez votre lieu de résidence"
        },
        "label" : "Lieu de résidence"
    })}}

    {{form_row(form.dateAnniversaire,{
        "attr" : {
            "placeholder":"Saisissez la date de votre anniversaire"
        },
        "label" : "Date d'anniversaire"
    })}}

    {{ form_widget(form) }}
    <input type="submit" class="btn btn-primary" value="Valider">   
{{ form_end(form) }}
</div>
{% endblock %}
