{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block monTitre %}Connectez-vous{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey | trans(error.messagedata, 'security') }} <br>
        Le nom d'utilisateur ou le mot de passe n'est pas pas bon. <br>
        Veuillez r√©essayer.
    </div>
{% endif %}
<form action="{{path('connexion')}}" method="post">
    <div container style="padding: 0% 70% 0% 2%">
        <div class="form-group">
            <label>Nom d'utilisateur : </label>
            <input type="text" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <label>Mot de passe : </label>
            <input type="password" required name="_password" class="form-control">
        </div>
        <input type="submit" class="btn btn-primary" value="Se connecter">
    </div>
</form>
{% endblock %}
